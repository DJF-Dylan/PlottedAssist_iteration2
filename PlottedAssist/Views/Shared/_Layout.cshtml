<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>PlottedPlants</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

    <link rel="icon" href=@Url.Action("~/Picture/logo_tab.png")>
    <script src='https://api.mapbox.com/mapbox-gl-js/v0.47.0/mapbox-gl.js'></script>
    <link href='https://api.mapbox.com/mapbox-gl-js/v0.47.0/mapbox-gl.css' rel='stylesheet' />
    <script src='https://api.mapbox.com/mapbox-gl-js/plugins/mapbox-gl-geocoder/v4.5.1/mapbox-gl-geocoder.min.js'></script>
    <link rel='stylesheet' href='https://api.mapbox.com/mapbox-gl-js/plugins/mapbox-gl-geocoder/v4.5.1/mapbox-gl-geocoder.css' type='text/css' />

</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top" style="opacity:0.8">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a class="navbar-brand" href="~/Home/Index" style="padding-top:10px;"><img id="logo" src="~/Picture/logo.png" height="30"></a>
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Home", "Index", "Home")</li>
                    <li>@Html.ActionLink("Invasive", "Index", "WeedSets")</li>
                    <li>@Html.ActionLink("Indi Plants", "Index", "PlantSets")</li>
                    <li>@Html.ActionLink("My Garden", "Index", "Dashboard")</li>
                    <li class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">Plant Info <span class="caret"></span></a>
                        <ul class="dropdown-menu">
                            <li>@Html.ActionLink("Planting Info", "PlantInfo", "PlantInfo")</li>
                            <li>@Html.ActionLink("Nearest Nurseries", "Nurseries", "PlantInfo")</li>
                            <li>@Html.ActionLink("Watering Guide", "WateringGuide", "PlantInfo")</li>
                            <li>@Html.ActionLink("Soil Types", "SoilTypes", "PlantInfo")</li>
                            <li>@Html.ActionLink("Why Prune", "Prune", "PlantInfo")</li>
                            <li>@Html.ActionLink("Sunshine Guide", "Sunshine", "PlantInfo")</li>
                            <li>@Html.ActionLink("Other Cares", "OtherCare", "PlantInfo")</li>
                            <li>@Html.ActionLink("Correct Planting Techniques", "PlantTech", "PlantInfo")</li>
                            <li>@Html.ActionLink("Wildlife Friendly Tips", "WildlifeTips", "PlantInfo")</li>
                        </ul>
                    </li>
                </ul>
                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </div>
    <div class="container-fluid body-content" style="margin-top:0px;padding-bottom:70px;padding-right:0px;padding-left:0px;">
        @RenderBody()


    </div>
    <footer style="background-color:black;">
        <br>
        <p style="text-align:center;">&copy; @DateTime.Now.Year - Plotted Plant</p>
        <br>
    </footer>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
