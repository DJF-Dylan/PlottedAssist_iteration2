        <h2>My Garden</h2>

        <p>
            @Html.ActionLink("Look through the plant list to find a plant", "../PlantSets/PlantList")
        </p>
        <div class="col-md-3">
            <div class="panel panel-primary">
                <div class="panel-heading">
                    <h3 class="panel-title">Today</h3>
                </div>
                <div class="panel-body">
                    <img src="~/Picture/SunNeed/1.jpg" height="30">
