                    <img src="~/Picture/SunNeed/1.jpg" height="30">
                    Nickname
                </div>
            </div>
        </div>
        <div class="col-md-9">
            @foreach (var item in Model)
            {

                <div class="col-xs-12" style="padding:20px;border:thin">

                    @Html.DisplayFor(modelItem => item.plantNickName)
                    <br>
                    @Html.DisplayFor(modelItem => item.PlantSet.PlantCommonName)
                    <br>
                    @Html.DisplayFor(modelItem => item.PlantSet.PlantSciName)
                    <br>


                    <img src="~/Picture/SunNeed/1.jpg" height="30">
