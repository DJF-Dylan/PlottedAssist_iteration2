@model PlottedAssist.Models.UserPlantSet

@{
    ViewBag.Title = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<!--Header-->

<div class="col-12 col-md-12" style="padding:0;background-image:url(../../Picture/Banner/MyGardenBanner.jpg);width:100%;margin:0;padding-bottom:10%;background-repeat:no-repeat;background-size:100%">
    <div>
        <img src="~/Picture/Banner/MyGardenTitle.png" style="width: 25%;margin-top: 13%;margin-left: 37%">
    </div>
</div>

<div class="form-horizontal col-md-8 col-md-offset-2 white-word" style="margin-top:50px;margin-bottom:70px;">
    <h2>Delete</h2>
    <h3>Are you sure you want to delete this?</h3>
    <div>
        
        <hr />
        <dl class="dl-horizontal">
            <dt>
               Plant name
            </dt>

            <dd>
                @Html.DisplayFor(model => model.PlantSet.PlantCommonName)
            </dd>

            <dt>
               Nick Name
            </dt>

            <dd>
                @Html.DisplayFor(model => model.plantNickName)
            </dd>
        </dl>

        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <div class="form-actions no-color">
                <input type="submit" value="Delete" class="btn btn-default" /> |
                @Html.ActionLink("Back to List", "Index")
            </div>
        }
    </div>
</div>